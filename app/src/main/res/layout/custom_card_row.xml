<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/grey">

    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardMaxElevation="20dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/trip_name_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="4dp"
                    android:text="TextView" />

                <Button
                    android:id="@+id/pop_menu_id"
                    android:layout_width="35dp"
                    android:layout_height="27dp"
                    android:layout_marginLeft="190dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/ic_more_vert_black_24dp" />
            </LinearLayout>


            <View
                android:layout_width="290dp"
                android:layout_height="2dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="8dp"

                android:background="@color/grey1" />

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="27dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"

                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/start_pin_id"
                    android:layout_width="38dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/location" />

                <TextView
                    android:id="@+id/from_id"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/from"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/start_loc_id"
                android:layout_width="320dp"
                android:layout_height="23dp"
                android:layout_marginLeft="20dp"
                android:inputType="textMultiLine"
                android:maxLines="2"
                android:layout_marginTop="8dp"></TextView>

            <View
                android:layout_width="290dp"
                android:layout_height="2dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"

                android:layout_marginBottom="1dp"
                android:background="@color/grey1" />

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="27dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"

                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/end_pin_id"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    app:srcCompat="@drawable/location" />

                <TextView
                    android:id="@+id/to_id"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/to"

                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/end_loc_id"
                android:layout_width="320dp"
                android:layout_height="21dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:hint="@string/des"
                android:text="TextView" />

            <View
                android:layout_width="290dp"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="20dp"
                android:background="@color/grey1" />

            <LinearLayout
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="121dp"
                    android:layout_height="66dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="52dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_schedule_24px" />

                    <TextView
                        android:id="@+id/Time_id"
                        android:layout_width="91dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"

                        android:hint="Enter Time"
                        android:text="TextView" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="121dp"
                    android:layout_height="66dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"

                        app:srcCompat="@drawable/calender" />

                    <TextView
                        android:id="@+id/Date_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"

                        android:inputType="textMultiLine"
                        android:maxLines="2"
                        android:text="TextView" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/note_id"
                android:layout_width="51dp"
                android:layout_height="34dp"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/ic_description_black_24dp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>